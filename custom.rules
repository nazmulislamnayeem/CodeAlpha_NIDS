# Detect Telnet connections
alert tcp any any -> any 23 (msg:"TELNET Attempt Detected"; sid:1000002; rev:1;)

# Detect Nmap scans (SYN scan)
alert tcp any any -> any any (flags:S; msg:"Possible Nmap SYN Scan"; sid:1000003; rev:1;)

# Detect suspicious payload (e.g., "malware")
alert tcp any any -> any any (content:"malware"; msg:"Suspicious Payload Detected - Malware Keyword"; sid:1000004; rev:1;)

# Detect netcat backdoor attempts
alert tcp any any -> any any (content:"nc"; msg:"Netcat usage detected"; sid:1000005; rev:1;)

# Detect generic shell command in payload
alert tcp any any -> any any (content:"/bin/sh"; msg:"Shell Access Attempt Detected"; sid:1000006; rev:1;)

# Detect suspicious UDP traffic (example payload: "exploit")
alert udp any any -> any any (content:"exploit"; msg:"Suspicious UDP Payload Detected - Keyword exploit"; sid:1000007; rev:1;)

# Detect DNS tunneling attempt (suspicious domain patterns)
alert udp any any -> any 53 (content:"dnscat"; msg:"Suspicious DNS Tunneling Detected (dnscat)"; sid:1000008; rev:1;)

